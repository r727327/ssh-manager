{
  "name": "ssh-manager",
  "version": "1.0.0",
  "description": "A modern SSH manager with terminal and SFTP support.",
  "author": {
    "name": "Ravi Singh",
    "email": "singhravi22@yahoo.com"
  },
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
